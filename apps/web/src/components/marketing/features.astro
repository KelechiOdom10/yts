---
import { Image } from "astro:assets";
import mindmap from "./assets/mindmap.png";
import brainstorming from "./assets/brainstorming.png";
import transcriptAccess from "./assets/transcript-access.png";
import learningPaths from "./assets/learning-paths.png";
import { Badge } from "../ui";

const features = {
  feature1: {
    title: "AI-Powered Summaries & Insights",
    description:
      "Get concise summaries with key points from any YouTube video, along with automatically generated mind maps to visualize relationships between concepts. Perfect for quickly understanding content without watching the entire video.",
    image: mindmap,
  },
  feature2: {
    title: "Interactive Content Exploration",
    description:
      "Ask questions about video content and receive instant, accurate answers. Clarify concepts, request examples, or explore specific topics mentioned in the video through natural conversation.",
    image: brainstorming,
  },
  feature3: {
    title: "Full Transcript Access",
    description:
      "View the complete transcript with timestamps, enabling you to easily search for specific terms or jump directly to relevant sections of the video.",
    image: transcriptAccess,
  },
  feature4: {
    title: "Personalized Learning Paths",
    description:
      "Organize videos into structured learning sequences to master any topic. Track your progress, add notes, and build a customized curriculum tailored to your learning goals.",
    image: learningPaths,
  },
};

const { feature1, feature2, feature3, feature4 } = features;
---

<section id="features" class="container mx-auto py-32">
  <div class="mb-12 flex flex-col items-center gap-6 text-balance text-center">
    <h2
      class="text-3xl font-semibold lg:max-w-3xl lg:text-5xl leading-tight font-header"
    >
      Powerful Features for Enhanced Learning
    </h2>
    <p class="text-lg text-fg/60 md:max-w-3xl">
      VideoInsight transforms how you learn from YouTube videos with AI-powered
      tools designed to help you understand, retain, and apply knowledge more
      effectively.
    </p>
  </div>
  <div class="relative flex justify-center">
    <div
      class="relative flex w-full flex-col mx-4 xl:mx-0 border border-muted sm:w-4/5 md:w-10/12 rounded-md bg-white"
    >
      <div class="relative flex flex-col md:flex-row">
        <div
          class="flex flex-col justify-between border-b border-solid border-muted2 p-10 md:w-3/5 md:border-b-0 md:border-r"
        >
          <h2 class="text-xl font-semibold font-header">{feature1.title}</h2>
          <p class="text-fg/70">{feature1.description}</p>
          <Image
            src={feature1.image}
            alt={feature1.title}
            class="mt-8 aspect-[1.5] h-full w-full object-contain md:aspect-[2.4]"
          />
        </div>
        <div class="flex flex-col justify-between p-10 md:w-2/5">
          <h2 class="text-xl font-semibold font-header">{feature2.title}</h2>
          <p class="text-fg/70">{feature2.description}</p>
          <Image
            src={feature2.image}
            alt={feature2.title}
            class="mt-8 aspect-[1.45] h-full w-full object-contain"
          />
        </div>
      </div>
      <div
        class="relative flex flex-col border-t border-solid border-muted2 md:flex-row"
      >
        <div
          class="flex flex-col justify-between border-b border-solid border-muted2 p-10 md:w-2/5 md:border-b-0 md:border-r"
        >
          <h2 class="text-xl font-semibold font-header">{feature3.title}</h2>
          <p class="text-fg/70">{feature3.description}</p>
          <Image
            src={feature3.image}
            alt={feature3.title}
            class="mt-8 aspect-[1.45] h-full w-full object-contain"
          />
        </div>
        <div class="flex flex-col gap-2 justify-between p-10 md:w-3/5">
          <Badge intent="info" className="w-fit">Coming Soon</Badge>
          <h2 class="text-xl font-semibold font-header">{feature4.title}</h2>
          <p class="text-fg/70">{feature4.description}</p>
          <Image
            src={feature4.image}
            alt={feature4.title}
            class="mt-8 aspect-[1.5] h-full w-full object-contain md:aspect-[2.4]"
          />
        </div>
      </div>
    </div>
  </div>
</section>
