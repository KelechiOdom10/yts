---
import { buttonStyles, cn } from "../ui";

const steps = [
  {
    id: 1,
    title: "Paste YouTube URL",
    description:
      "Simply paste any YouTube video link into our platform to begin the learning process.",
    icon: "video",
  },
  {
    id: 2,
    title: "AI Processes Content",
    description:
      "Our AI analyzes the video, transcribes the content, and extracts key insights and concepts.",
    icon: "sparkles",
  },
  {
    id: 3,
    title: "Learn & Interact",
    description:
      "Ask questions, create personalized learning paths, and study efficiently with our interactive tools.",
    icon: "brain",
  },
] as const;
---

<section class="py-16 md:py-24 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-12">
      <h2
        class="text-3xl font-semibold lg:max-w-3xl lg:text-5xl leading-tight mb-2.5 mx-auto"
      >
        How It Works
      </h2>
      <p class="text-lg text-fg/60 md:max-w-3xl mx-auto">
        Transform your YouTube learning experience in three simple steps. Get
        started for free with your own API key. Upgrade anytime for premium
        features.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {
        steps.map(step => (
          <div class="flex flex-col items-center text-center p-6 rounded-lg hover:outline-2 hover:outline-muted bg-white">
            <div
              class={cn(
                "w-12 h-12 flex items-center justify-center rounded-full  mb-4",
                {
                  "bg-light-pink/40 text-pink-700": step.icon === "video",
                  "bg-amber-100/60 text-amber-700": step.icon === "sparkles",
                  "bg-light-blue/40 text-cyan-600": step.icon === "brain",
                }
              )}
            >
              {step.icon === "video" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    d="M15.75 10.5l4.72-4.72a.75.75 0 011.28.53v11.38a.75.75 0 01-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 002.25-2.25v-9a2.25 2.25 0 00-2.25-2.25h-9A2.25 2.25 0 002.25 7.5v9a2.25 2.25 0 002.25 2.25z"
                  />
                </svg>
              )}
              {step.icon === "sparkles" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"
                  />
                </svg>
              )}
              {step.icon === "brain" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-6 h-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"
                  />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
            <p class="text-fg/60">{step.description}</p>
            <div
              class={cn("mt-4 text-2xl font-bold", {
                "text-pink-700": step.icon === "video",
                "text-amber-700": step.icon === "sparkles",
                "text-cyan-600": step.icon === "brain",
              })}
            >
              {step.id}
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a href="/signup" class={buttonStyles()}>
        Try It Now
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
