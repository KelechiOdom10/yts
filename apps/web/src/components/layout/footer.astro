---
import { IconBrandLinkedin, IconBrandGithub } from "justd-icons";
import { siteConfig } from "@yts/shared";

import Logo from "./logo.astro";

// Footer navigation items
const footerNavItems = [
  {
    title: "Product",
    items: [
      { name: "Features", href: "/#features" },
      { name: "Pricing", href: "/pricing" },
      { name: "Explore", href: "/explore" },
    ],
  },
  {
    title: "Company",
    items: [
      { name: "Home", href: "/" },
      { name: "Contact", href: `mailto:${siteConfig.email}` },
      { name: "Privacy", href: "/privacy" },
      { name: "Terms", href: "/terms" },
    ],
  },
];

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and description -->
      <div class="col-span-1">
        <Logo />
        <p class="mt-4 text-fg/70 text-base">
          Transform how you learn from YouTube videos with AI-powered summaries,
          interactive chat, and personalized learning paths.
        </p>
        <div class="mt-6 flex space-x-4">
          <a
            href="https://www.linkedin.com/in/kelechi-odom-065308157/"
            target="_blank"
            class="text-gray-500 hover:text-gray-800"
          >
            <span class="sr-only">LinkedIn</span>
            <IconBrandLinkedin className="h-6 w-6" />
          </a>
          <a
            href="https://github.com/kelechiodom10"
            target="_blank"
            class="text-gray-500 hover:text-gray-800"
          >
            <span class="sr-only">GitHub</span>
            <IconBrandGithub className="h-6 w-6" />
          </a>
        </div>
      </div>

      <!-- Navigation sections -->
      {
        footerNavItems.map(section => (
          <div class="col-span-1">
            <h3 class="text-sm font-semibold text-gray-900 tracking-wider uppercase">
              {section.title}
            </h3>
            <ul class="mt-4 space-y-3">
              {section.items.map(item => (
                <li>
                  <a
                    href={item.href}
                    class="text-base text-gray-600 hover:text-gray-900"
                  >
                    {item.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-center text-gray-500 text-sm">
        &copy; {currentYear} VideoInsight. All rights reserved.
      </p>
    </div>
  </div>
</footer>
